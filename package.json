    "esbuild": "0.19.5",
    "eslint": "^8.19.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">= 19.0.0"
